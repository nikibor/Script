<div class="card">
  <div class="card-header">
<p id="notice"><%= notice %></p>

<h1>Жанры</h1>
  </div>
  <div class="card-body">
<table class="table">
  <thead>
  <tr>
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Подробнее', genre %></td>
        <td><%= link_to 'Редактировать', edit_genre_path(genre) %></td>
        <td><%= link_to 'Удалить', genre, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
  </div>
<div class="card-footer">
<%= link_to 'Добавить жанр', new_genre_path, class: 'btn btn-success' %>
</div>
</div>