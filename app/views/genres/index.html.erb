<p id="notice"><%= notice %></p>

<h1>Жанры</h1>

<table class="table">
  <thead>
  <tr>
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to 'Подробнее', genre %></td>
        <td><%= link_to 'Редактировать', edit_genre_path(genre) %></td>
        <td><%= link_to 'Удалить', genre, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

