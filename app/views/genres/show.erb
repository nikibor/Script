<div class="card">
  <div class="card-header">
    <h3 align="center">Жанр</h3>
  </div>
  <div class="card-body">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-md-2">
        <h5><strong>Название:</strong></h5>
      </div>
      <%= @genre.name %>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to 'Редактировать', edit_genre_path(@genre) %> |
    <%= link_to 'Назад', genres_path %>
  </div>
</div>