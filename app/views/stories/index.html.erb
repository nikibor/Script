<div class="card">
  <div class="card-header">
<p id="notice"><%= notice %></p>

<h1>Истории</h1>
  </div>
  <div class="card-body">
<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Жанр</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.title %></td>
        <td><%= story.description %></td>
        <td><%= story.genre.name %></td>
        <td><%= link_to 'Подробнее', story %></td>
        <td><%= link_to 'Редактировать', edit_story_path(story) %></td>
        <td><%= link_to 'Удалить', story, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <td><%= check_box_tag 'completed', story.id  %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
  <div class="card-footer">
<%= link_to 'Добавить историю', new_story_path, class: 'btn btn-success' %>
    <button class="btn btn-primary">CSV</button>
  </div>
</div>