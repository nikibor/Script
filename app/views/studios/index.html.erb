<p id="notice"><%= notice %></p>

<h1>Мои истории</h1>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Описание</th>
      <th>Жанр</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.title %></td>
        <td><%= story.description %></td>
        <td><%= story.genre.name %></td>
        <td><%= link_to 'Подробнее', "/studios/#{story.id}" %></td>
        <td><%= link_to 'Редактировать', "/studios/#{story.id}/edit" %></td>
        <td><%= link_to 'Удалить', "/studios/#{story.id}", method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить историю', new_studio_path %>
