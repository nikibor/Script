<div class="card">
  <div class="card-header">
    <h3 align="center">История</h3>
  </div>
  <div class="card-body">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-md-2">
        <h5><strong>Название:</strong></h5>
      </div>
        <%= @story.title %>
    </div>


    <div class="row">
      <div class="col-md-2">
        <h5><strong>Описание:</strong></h5>
      </div>
      <%= @story.description %>
    </div>

    <div class="row">
      <div class="col-md-2">
        <h5><strong>Жанр:</strong></h5>
      </div>
      <%= @story.genre.name %>
    </div>

  </div>
  <div class="card-footer">
    <%= link_to 'Редактировать', edit_story_path(@story) %> |
    <%= link_to 'Назад', stories_path %>
  </div>
</div>