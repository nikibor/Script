<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'place', label: 'Имя' %>
    <%= f.input :password, label: 'Пароль' %>
    <%= f.input :city, collection: %i[Ульяновск Москва], label: 'Город', default:'Ульяновск' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Сохранить' %>
  </div>
<% end %>
