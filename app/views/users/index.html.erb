<div class="card">
  <div class="card-header">
<p id="notice"><%= notice %></p>
    <h1>Пользователи</h1>
  </div>
  <div class="card-body">


<table class="table">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Почтовый адрес</th>
      <th>Роль</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Подробнее', user %></td>
        <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
        <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
<div class="card-footer">
<%= link_to 'Добавить пользователя', new_user_path, class: 'btn btn-success' %>
</div>
</div>